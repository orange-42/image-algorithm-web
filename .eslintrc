{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "prettier" // 确保 Prettier 放在最后一项
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // 强制引入语句使用单引号
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
